<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#55880000">

    <ImageView
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%"
        android:background="#22880000"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/blank1_main"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <TextView
        android:id="@+id/blank2_main"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        android:layout_toEndOf="@id/imgUser_main"
        />

    <TextView
        android:id="@+id/userName_main"
        android:hint="username"
        android:layout_height="wrap_content"
        app:layout_widthPercent="40%"
        android:layout_toEndOf="@id/blank2_main"
        android:layout_alignTop="@id/imgUser_main"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/bookName_main"
        android:hint="bookname"
        app:layout_widthPercent="40%"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/blank2_main"
        android:layout_alignBottom="@id/imgUser_main"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/blank3_main"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        android:layout_toEndOf="@id/bookName_main"
        />
    <Button
        android:id="@+id/btnLike_main"
        android:layout_toEndOf="@id/blank3_main"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="23%"
        android:layout_alignTop="@id/imgUser_main"
        android:background="#555555"
        android:textSize="25sp"
        android:text="Like"
        android:textColor="#EEEEEE"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btnHide_main"
        android:layout_toEndOf="@id/blank3_main"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="23%"
        android:layout_alignBottom="@id/imgUser_main"
        android:background="#00FFFFFF"
        android:text="Hide"
        android:textAllCaps="false"
        android:textColor="#555555"
        />
    <ImageView
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%"
        android:background="#11880000"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/imgUser_main"
        app:layout_heightPercent="70%"
        app:layout_widthPercent="20%"
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/blank1_main" />

</android.support.percent.PercentRelativeLayout>
