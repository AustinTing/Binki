<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/wrapTitle_post"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/blank1_post"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="5%"
        />

        <Button
        android:id="@+id/btnOK_post"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="25%"
        android:layout_toEndOf="@id/title_post"
        android:text="OK"
        android:textSize="25sp"
        />

        <TextView
            android:id="@+id/title_post"
            android:layout_height="wrap_content"
            app:layout_widthPercent="65%"
            android:text="Add a book"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:layout_alignBaseline="@+id/btnOK_post"
            android:layout_alignBottom="@+id/btnOK_post"
            android:layout_toEndOf="@+id/blank1_post" />

    </android.support.percent.PercentRelativeLayout>>

    <EditText
        android:id="@+id/etBookName_post"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%"
        android:layout_below="@id/wrapTitle_post"
        android:hint="input book name"
        />
    <EditText
        android:id="@+id/etBookInfo_post"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="100%"
        android:layout_below="@id/etBookName_post"
        android:hint="Write something about the book..."
        />

</android.support.percent.PercentRelativeLayout>
