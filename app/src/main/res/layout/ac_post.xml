<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wrapTitle_post"
        android:background="@color/colorPrimary"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/title_post"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Add a book"
            android:textColor="#FFFFFF"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btnOK_post"
            android:layout_height="16dp"
            android:layout_width="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok_button"
            android:layout_marginRight="16dp"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/etBookName_post"
        android:layout_below="@id/wrapTitle_post"
        android:hint="input book name"
        android:textSize="16sp"
        android:layout_height="72dp"
        android:layout_width="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/etBookInfo_post"
        android:layout_below="@id/etBookName_post"
        android:hint="Write something about the book..."
        android:layout_height="72dp"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

</RelativeLayout>
