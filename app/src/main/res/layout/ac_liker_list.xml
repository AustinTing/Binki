<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_liker_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="8dp"
        android:text="PEOPLE WHO LIKE"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bookName_liker_list"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/title_liker_list"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="蘋果橘子經濟學" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_liker_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="8dp"
        android:layout_below="@id/bookName_liker_list"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</RelativeLayout>
