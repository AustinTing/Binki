<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <TextView
        android:id="@+id/bookName_shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:hint="國家為什麼會失敗"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/clickLayout_shelf"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"/>

    <RelativeLayout
        android:id="@+id/clickLayout_shelf"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/imgLike_shelf"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:src="@drawable/like"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/likeCount_shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="999+"
            android:textColorHint="#555555"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_toRightOf="@+id/imgLike_shelf"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>


    </RelativeLayout>


</RelativeLayout>
