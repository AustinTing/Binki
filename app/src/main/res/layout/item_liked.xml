<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SelectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUser_item_like"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginLeft="16dp"
        tools:src="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/userName_item_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Username"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@id/imgUser_item_like"
        android:layout_toEndOf="@id/imgUser_item_like"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/btnRemove_item_like"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_centerVertical="true"
        android:background="@drawable/cancel"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/bookName_item_like"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Bookname"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_alignBottom="@id/imgUser_item_like"
        android:layout_toEndOf="@id/imgUser_item_like"
        android:layout_toStartOf="@+id/btnRemove_item_like"
        android:layout_marginRight="16dp"
        android:ellipsize="marquee"
        />
</RelativeLayout>

